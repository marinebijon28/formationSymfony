{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtre</h3>
            {{ form(form) }}
        </div>
    <div class="col-md-9">
        <h3>Nos Produits</h3>
        
        <div class="row products-container">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="products-item text-center">
                        <a href="{{ path('product', {'slug' : product.slug }) }}" ><img src="{{ asset('assets/productsImgs/') ~ product.illustration }}" alt="{{ product.name }}" 
                            class="img-fluid" /></a>
                        <h5>{{ product.name }}</h5>
                        <span class="products-subtitle">{{ product.subtitle }}</span>
                        <span class="products-price">{{ (product.price / 100) | number_format(2, ',', '.') }}â‚¬</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
